<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap android:mipMap="true" android:src="@mipmap/icon_foreground" />
    </item>
    <item>
        <shape>
            <stroke android:width="15dp" android:color="?attr/backgroundColor" />
